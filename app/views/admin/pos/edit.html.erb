<%= hook :pos_edit_form_header do %>
  <h1><%= t("editing_pos") %></h1>
  <%= render "shared/error_messages", :target => @pos %>
<% end %>

<%= hook :pos_edit_form do %>
  <%= form_for(@pos, :url => object_url, :html => { :method => :put }) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>

    <%= hook :pos_edit_form_buttons do %>
      <%= render :partial => "admin/shared/edit_resource_links" %>
    <% end %>
  <% end %>
<% end %>
