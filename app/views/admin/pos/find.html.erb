<table>
  <tr>
    <td>
    <table class="index" id='listing_products'>
      <tr>
          <th><%= t("sku") %></th>
          <th><%= sort_link @search,:name, t("name"), {}, {:title => 'admin_products_listing_name_title'} %></th>
          <th><%= sort_link @search,:master_price, t("master_price") %></th>
      </tr>
      <% @products.each do |product| %>
        <tr <%= 'style="color:red;"' if product.deleted? %> id="<%= dom_id product %>">
          <td><%= product.sku %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td class="actions">
              <%= link_to  "Select" , "/admin/pos/index?add=#{product.id}" %>
          </td>
        </tr>
      <% end %>
    </table>
    <% @pos = @products %>
    <%= will_paginate(:previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;") %>
    </td>
    <td>
      <%= form_for [:admin, :pos ,  @search] do |f| %>
        <div class="box">
          <h3><%= t(:search) %></h3>
          <p>
            <%= f.label :name_contains, t("name") %><br />
            <%= f.text_field :name_contains, :size => 15 %>
          </p>
          <p>
            <%= f.label :description_contains, t("description") %><br />
            <%= f.text_field :description_contains, :size => 15 %>
          </p>
          <p>
            <%= f.label :variants_including_master_sku_contains, t("sku") %><br />
            <%= f.text_field :variants_including_master_sku_contains, :size => 15 %>
          </p>
          <p>
            <%= f.label :variants_including_master_price_less_than, t("price_min") %><br />
            <%= f.text_field :variants_including_master_price_less_than, :size => 15 %>
          </p>
          <p>
            <%= f.label :variants_including_master_price_gte, t("price_max") %><br />
            <%= f.text_field :variants_including_master_price_gte, :size => 15 %>
          </p>

          <p class="form-buttons">
            <%= button t("search") %>
          </p>
        </div>
      <% end %>
    </td>
  </tr>
</table>